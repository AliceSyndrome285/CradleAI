{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {   
    "strict": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2017"],
    "rootDir": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
